@model PacoteViewModel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja excluir este pacote?</h3>

<div>
    <h4>Pacote</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @Model.Nome
            </dd>
            <dt class="col-sm-2">
                Origem
            </dt>
            <dd class="col-sm-10">
                @Model.Origem
            </dd>
            <dt class="col-sm-2">
                Destino
            </dt>
            <dd class="col-sm-10">
                @Model.Destino
            </dd>
            <dt class="col-sm-2">
                Saída
            </dt>
            <dd class="col-sm-10">
                @Model.Saida.ToString("dd/MM/yyyy HH:mm")
            </dd>
            <dt class="col-sm-2">
                Retorno
            </dt>
            <dd class="col-sm-10">
                @Model.Retorno.ToString("dd/MM/yyyy HH:mm")
            </dd>
        </dl>
    </div>

    <form asp-action="Excluir" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="ExcluirPacotes" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

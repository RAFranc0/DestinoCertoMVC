@model PacoteViewModel

@{
    ViewData["Title"] = "Adicionar Pacote";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Adicionar" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Origem" class="control-label"></label>
        <input asp-for="Origem" class="form-control" />
        <span asp-validation-for="Origem" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Destino" class="control-label"></label>
        <input asp-for="Destino" class="form-control" />
        <span asp-validation-for="Destino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Atrativos" class="control-label"></label>
        <input asp-for="Atrativos" class="form-control" />
        <span asp-validation-for="Atrativos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Saida" class="control-label"></label>
        <input asp-for="Saida" class="form-control"/>
        <span asp-validation-for="Saida" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Retorno" class="control-label"></label>
        <input asp-for="Retorno" class="form-control"/>
        <span asp-validation-for="Retorno" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UsuarioId" value="3" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>

<a asp-action="Index" asp-controller="Home">Voltar</a>
